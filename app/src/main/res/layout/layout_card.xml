<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="2dp"
    app:cardElevation="1dp">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txv_student_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:text="name"
            app:layout_constraintStart_toEndOf="@+id/imgv_student_photo"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txv_student_ra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="RA"
            app:layout_constraintStart_toEndOf="@+id/imgv_student_photo"
            app:layout_constraintTop_toBottomOf="@+id/txv_student_name" />

        <TextView
            android:id="@+id/txv_student_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Age"
            app:layout_constraintStart_toEndOf="@+id/imgv_student_photo"
            app:layout_constraintTop_toBottomOf="@+id/txv_student_ra" />

        <TextView
            android:id="@+id/txv_student_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:text="Phone"
            app:layout_constraintBottom_toBottomOf="@+id/txv_student_age"
            app:layout_constraintStart_toEndOf="@+id/txv_student_age"
            app:layout_constraintTop_toTopOf="@+id/txv_student_age"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/imgv_student_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/txv_student_age"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txv_student_name"
            app:srcCompat="@mipmap/ic_launcher" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>